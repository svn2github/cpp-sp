      <RegistrySearch Id='AppReg2' Root='HKLM' 
                      Key='SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\{A9A0D770-C658-4659-BC75-6F8289DDEAA3}' 
                      Name='DisplayVersion' Type='raw' />
      <RegistrySearch Id='SP2_4_0_32' Root='HKLM' 
